<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/general.css">
    <link rel="stylesheet" href="../css/all.css">
    <title>All TESTE</title>
    
    <style>
    </style>
</head>
<body>
    <header style="color: white">
        <img src="../assets/capitol/catching_fire_capitol_seal_vector_by_trebory6-d62l0oa.png" alt="" width="100px" class="mt-2 mb-2">
        <h1>The Tributes</h1>
        <div class="menu">
            <a href="/" class="btn">Hall Of The Fame</a>
                <a href="/all" class="btn">All Tributes</a>
                <a href="/form" class="btn">New Tribute</a>
                <a href="/formDistrict" class="btn">Search By District</a>
                <a href="/formEdition" class="btn">Search By Edition</a>
        </div>
    </header>

    <div class="tribute mb-3">
        <% let currentEdition = null; %>
        <% for (let i = 0; i < tributes.length; i++) { %>
            <% const tribute = tributes[i]; %>
            <% if (tribute.edition !== currentEdition) { %>
                <!-- Exibir a edição como um cabeçalho -->
                <h2 class="mb-4 mt-4">Edition: <%= tribute.edition %></h2>
                <% currentEdition = tribute.edition; %>
            <% } %>

            <!-- Exibir informações do tributo -->
            <div id="<%=tribute._id%>" class="dT mb-4 container">
                <form action="/<%=tribute._id%>?_method=DELETE" method="POST">
                    <section>
                        <section class="frame">
                            <img src="<%=tribute.imageUrl == '' || tribute.imageUrl == null ? '../assets/capitol/testeG.png' : tribute.imageUrl%>" alt="tribute <%=tribute.nameTribute%> picture" width="190px" height="260px">
                        </section>
                        <h2><%= tribute.nameTribute %></h2>
                        <h4>District: <%= tribute.district %></h4>
                        <%if(tribute.skills){%>
                            <hr>
                            <strong>Skills</strong>: <%=tribute.skills%>
                        <%}%>
                    </section>
                    <a href="/edit/<%=tribute._id%>">Edit</a>
                    <a href="/del/<%=tribute._id%>">Del</a>
                </form>
            </div>
        <% } %>
    </div>
    
    <footer class="sticky-footer" style="bottom: -100px">
        President Coriolanus Snow
        <hr>
        Minister of Technology Ilan Veras
    </footer>
</body>
</html>
