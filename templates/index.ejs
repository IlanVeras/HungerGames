<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/general.css">
    <link rel="stylesheet" href="../css/formCad.css">
    <title>Redirection</title>
</head>
<body>
    <header>
        <div class="menu">
            <img src="../assets/capitol/catching_fire_capitol_seal_vector_by_trebory6-d62l0oa.png" alt="" width="100px" class="mt-2 mb-2">
            <div class="menu">
                <h1>New Tribute</h1>
                <a href="/" class="btn">Hall Of The Fame</a>
                <a href="/all" class="btn">All Tributes</a>
                <a href="/form" class="btn">New Tribute</a>
                <a href="/formDistrict" class="btn">Search By District</a>
                <a href="/formEdition" class="btn">Search By Edition</a>
            </div>
        </div>
    </header>
    <form action="/" method="POST">
        <input type="text"  name="nameTribute" placeholder="Name" value="<%= body.nameTribute %>">
        <input min="12" type="number"  name="age" placeholder="Age" value="<%= body.age %>">
        <h3>District</h3>
        <select name="district">
            <option type="number" value="1">1</option>
            <option type="number" value="2">2</option>
            <option type="number" value="3">3</option>
            <option type="number" value="4">4</option>
            <option type="number" value="5">5</option>
            <option type="number" value="6">6</option>
            <option type="number" value="7">7</option>
            <option type="number" value="8">8</option>
            <option type="number" value="9">9</option>
            <option type="number" value="10">10</option>
            <option type="number" value="11">11</option>
            <option type="number" value="12">12</option>
        </select>
        <h3>Sex</h3>
        <input type="radio" name="newSex" id="male" value="2" checked>
        <label for="male" >Male</label>
        <input type="radio" name="newSex" id="female" value="1">
        <label for="female">Female</label> <br><br>
        <h3>Skills</h3>
        <input type="text"  name="skills" placeholder="Skills" value="<%= body.skills %>">
        <h3>Edition</h3>
        <input type="number" min="1" max="76" name="edition" placeholder="edition" value="<%= body.edition %>">
        <h3>Condition</h3>
        <input type="radio" name="condition" value="reaped" checked>
        <label for="reaped">Reaped</label>
        <input type="radio" name="condition" value="volunteer">
        <label for="volunteer">Volunteer</label>
        <h3>Winner</h3>
        <input type="radio" name="winner" value="false" checked>
        <label for="false">No</label>
        <input type="radio" name="winner" value="true">
        <label for="true">Yes</label>
        <h3>Status</h3>
        <input type="radio" name="status" value="alive">
        <label for="alive">Alive</label>
        <input type="radio" name="status" value="deceased" checked>
        <label for="alive">Deceased</label>
        <input type="radio" name="status" value="unknown">
        <label for="alive">Unknown</label>
        <h3>Image URL</h3>
        <input type="text"  name="imageUrl" placeholder="Image Link" value="<%= body.imageUrl %>">
        <h3>Wanted</h3>
        <input type="radio" name="wanted" value="false">
        <label for="false">No</label>
        <input type="radio" name="wanted" value="true" checked>
        <label for="true">Yes</label>
        <button>Save</button>
    </form>

    <%if(error){%>
        <h3><%=error.message%></h3>
    <%}%>
    <!--
        const tributeSchema = new mongoose.Schema({
            nameTribute: {type: String, required: true},
            age: {type: Number, required: true},
            district: {type: Number, required: true},
            skills: String,
            sex: {type: String, required: true},
            edition: {type: String, required: true},
            condition: {type: String, required: true},
            clicks: {type: Number, default:0}
        })
    -->
    <footer style="bottom: -100px">
        President Coriolanus Snow
        <hr>
        Minister of Technology Ilan Veras
    </footer>
</body>
</html>

